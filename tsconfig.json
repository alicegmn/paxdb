{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".", // s√• att alla mappar inkluderas
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "app.ts",
    "api/**/*",
    "db/**/*",
    "middlewares/**/*",
    "routes/**/*",
    "swagger/**/*"
  ]
}
